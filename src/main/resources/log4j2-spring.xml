<Configuration monitorInterval="60">

	<Properties>
		<Property name="log-path">logs</Property>
		<Property name="LOG4J2_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName}---
			[%15.15t] %-40.40c{1.} %M %L : %m%n%ex</Property>
		<Property name="LOG_PATTERN">%-5p %d{yyyy-MM-dd/HH:mm:ss/zzz} [App] (%F:%L) (%M) %m%n</Property>
	</Properties>

	<Appenders>
		<Console name="Console-Appender" target="SYSTEM_OUT">
			<!-- <PatternLayout> <pattern> [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} 
				[%t] %c{1} - %msg%n %M </pattern>> </PatternLayout> -->
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>
		<File name="App-File-Appender" fileName="${log-path}/pos-log4j2.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</File>
		<File name="SpringBoot-File-Appender" fileName="${log-path}/pos-log4j2.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</File>
	</Appenders>

	<Loggers>
		<Logger name="org.springframework.web" level="info" additivity="false">
			<AppenderRef ref="SpringBoot-File-Appender" />
			<AppenderRef ref="Console-Appender" />
		</Logger>
		<Logger name="com.newfound.rest" level="info"
			additivity="false">
			<AppenderRef ref="App-File-Appender" />
			<AppenderRef ref="Console-Appender" />
		</Logger>
		<Logger name="com.dhl.pos.rest" level="info" additivity="false">
			<AppenderRef ref="SpringBoot-File-Appender" />
			<AppenderRef ref="Console-Appender" />
		</Logger>
		<Logger name="jpa.poc" level="info" additivity="false">
			<AppenderRef ref="SpringBoot-File-Appender" />
			<AppenderRef ref="Console-Appender" />
		</Logger>
		<Root>
			<AppenderRef ref="Console-Appender" />
		</Root>
	</Loggers>

</Configuration>